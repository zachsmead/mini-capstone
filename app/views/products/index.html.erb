<h1>Products</h1>
<br />

<% @products.each_slice(4) do |four_products| %>
	<div class="row">
		<% four_products.each do |product| %>
			<div class="col-md-3 index-box">
				<div class="well uniform">
					<a href="/products/<%= product.id %>">
						<h2><%= product.name %></h2>
					</a>
						<div id="box-image">
							<% if product.images.first %>
								<img src="<%= product.images.first.src %>" id="box-image">
							<% else %>
								<%= link_to "Add an image for this product", "/products/#{product.id}/images/new", method: :get %>
							<% end %>
						</div>
						<div>
							<h3><a href="/products/<%= product.id%>">$ <%="#{ product.price }"%></a></h3>
						</div>
				</div>
			</div>
		<% end %>
	</div>
<% end %>

<br />

<div class="index-box">

	<div class="col-lg-2 col-centered well">

		<%= form_tag "/products/new", method: :get do %>
			<input type="submit" value="Add a new product">
		<% end %>

		<br />

		<%= form_tag "/suppliers", method: :get do %>
			<input type="submit" value="View suppliers">
		<% end %>

	</div>

	<br />

	<div class="col-lg-2 col-centered well">
		<%= form_tag "/search", method: :post do %>
			<div>
				<input type="text" name="search_term">
			</div>

			<div>
				<input type="submit" value="Search for a product">
			</div>

		<% end %>
	</div>

</div>

<br />
<br />