<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Viewing options
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
      <li><a href="/products?sort=price&order=asc">Sort by price (Ascending)</a></li>
      <li><a href="/products?sort=price&order=desc">Sort by price (Descending)</a></li>
      <li><a href="/products?showing=discount">Show discount items</a></li>
      <li><a href="/products/random">Look at a random item</a></li>
    </ul>
  </div>


<br />
<h1>Products</h1>
<br />

<% @products.each_slice(4) do |four_products| %>
	<div class="row">
		<% four_products.each do |product| %>
			<div class="col-sm-3 index-box">
				<div class="well uniform">
					<a href="/products/<%= product.id %>">
						<h2><%= product.name %></h2>
					</a>
						<div>
							<% if product.images.first %>
								<img src="<%= product.images.first.src %>" id="box-image">
							<% else %>
								<%= link_to "Add an image for this product", "/products/#{product.id}/images/new", method: :get %>
							<% end %>
						</div>
						<br />
						<div>
							<a href="/products/<%= product.id%>">$ <%="#{ product.price }"%></a>
						</div>
				</div>
			</div>
		<% end %>
	</div>
<% end %>

<br />

<div class="index-box">

	<div class="col-sm-2 col-centered well">

		<%= form_tag "/products/new", method: :get do %>
			<input type="submit" value="Add a new product">
		<% end %>

		<br />

		<%= form_tag "/suppliers", method: :get do %>
			<input type="submit" value="View suppliers">
		<% end %>

	</div>

	<br />

	<div class="col-sm-2 col-centered well">
		<%= form_tag "/search", method: :post do %>
			<div>
				<input type="text" name="search_term">
			</div>

			<div>
				<input type="submit" value="Search for a product">
			</div>

		<% end %>
	</div>

</div>

<br />
<br />