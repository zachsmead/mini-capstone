<h1>Login</h1>

<div class="row">
	<div class="col-sm-3 col-centered text-center well">
		<div class="user-input-box">
			<%= form_tag "/login", method: :post do %>

				<div>
					Email:
					<input type="text" name="email">
				</div>
					
				<div>
					Password:
					<input type="password" name="password">
				</div>

				<input type="submit" value="Log In!">

			<% end %>
		</div>
	</div>
</div>